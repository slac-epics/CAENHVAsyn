    field(DTYP, "asynFloat64")
    field(FLNK, "$(P)$(R)RecFailSleep-R")
    field(OUT,  "@asyn($(PORT),$(ADDR=0),$(TIMEOUT=1))CONN_FAIL_SLEEP")
